						<script>
							(function() {
								// Get all pagination links
								const paginationLinks = document.querySelectorAll('#pagination-controls a');
								const contentDiv = document.getElementById('page-content');
								
								// Color classes for each page
								const pageColors = [
									'from-blue-50 to-indigo-50 border-blue-200',
									'from-green-50 to-emerald-50 border-green-200',
									'from-purple-50 to-pink-50 border-purple-200',
									'from-orange-50 to-yellow-50 border-orange-200',
									'from-red-50 to-rose-50 border-red-200'
								];
								
								function showPage(pageNum) {
									// Hide all page contents
									for (let i = 1; i <= 5; i++) {
										const pageContent = document.getElementById('page-' + i + '-content');
										if (pageContent) {
											pageContent.classList.add('hidden');
										}
									}
									
									// Show selected page content
									const selectedContent = document.getElementById('page-' + pageNum + '-content');
									if (selectedContent) {
										selectedContent.classList.remove('hidden');
									}
									
									// Update background color
									contentDiv.className = 'mb-6 p-6 rounded-lg border-2 min-h-[200px] bg-gradient-to-br ' + pageColors[pageNum - 1];
									
									// Update pagination controls
									updatePaginationControls(pageNum);
								}
								
								function updatePaginationControls(currentPage) {
									const container = document.getElementById('pagination-controls');
									container.innerHTML = '';
									
									// Create new pagination
									const nav = document.createElement('nav');
									nav.className = 'flex items-center gap-1';
									nav.setAttribute('aria-label', 'Pagination');
									
									// Previous button
									const prevBtn = createPaginationItem('‚Üê', currentPage - 1, currentPage === 1, currentPage === 1);
									nav.appendChild(prevBtn);
									
									// Page numbers
									for (let i = 1; i <= 5; i++) {
										const pageBtn = createPaginationItem(i.toString(), i, false, i === currentPage);
										nav.appendChild(pageBtn);
									}
									
									// Next button
									const nextBtn = createPaginationItem('‚Üí', currentPage + 1, currentPage === 5, currentPage === 5);
									nav.appendChild(nextBtn);
									
									container.appendChild(nav);
								}
								
								function createPaginationItem(text, pageNum, isDisabled, isActive) {
									if (isDisabled) {
										const span = document.createElement('span');
										span.className = 'inline-flex items-center justify-center border transition-colors px-3 py-2 text-base min-w-[2.5rem] bg-gray-100 text-gray-400 cursor-not-allowed border-gray-200';
										span.textContent = text;
										return span;
									}
									
									if (isActive) {
										const span = document.createElement('span');
										span.className = 'inline-flex items-center justify-center border transition-colors px-3 py-2 text-base min-w-[2.5rem] bg-primary text-white border-primary';
										span.setAttribute('aria-current', 'page');
										span.textContent = text;
										return span;
									}
									
									const a = document.createElement('a');
									a.href = 'javascript:void(0)';
									a.className = 'inline-flex items-center justify-center border transition-colors px-3 py-2 text-base min-w-[2.5rem] bg-white text-primary border-gray-300 hover:bg-primary-light hover:border-primary';
									a.textContent = text;
									a.onclick = function(e) {
										e.preventDefault();
										showPage(pageNum);
									};
									return a;
								}
								
								// Initialize - show page 1
								showPage(1);
							})();
						</script>
