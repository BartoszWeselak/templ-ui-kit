package components

templ Card(title string, content string) {
    <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
        <h3 class="text-xl font-bold mb-3 text-gray-800">
            { title }
        </h3>
        <p class="text-gray-600">
            { content }
        </p>
    </div>
}